{
  "name": "reef-homework",
  "version": "1.0.0",
  "description": "homework service for Coral Reef",
  "main": "dist/hooks.js",
  "scripts": {
    "build": "tsc --noEmit && tsup",
    "build:docker": "docker build --platform ${DOCKER_PLATFORM:-linux/amd64} --progress=plain -t reef-homework .",
    "clean": "rm -rf dist",
    "start": "npx @deeep-network/riptide start --hooks dist/hooks.js",
    "validate": "npm run build && npx @deeep-network/riptide validate --hooks dist/hooks.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@deeep-network/riptide": "^0.2.11"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "tsup": "^8.5.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}